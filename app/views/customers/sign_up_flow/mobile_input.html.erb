<div class="w-full max-w-md mx-auto my-8">
  <div class="bg-white border border-gray-300 rounded-lg px-8 pt-6 pb-8">
    <h2 class="pt-4 mb-1 text-4xl font-bold heading">Sign up</h2>
    <h3 class="pt-2 mb-8 text-xl uppercase font-bold heading">Step 1/3:</h3>

    <%= form_for @auth_flow, url: wizard_path, method: :put do |f| %>
      <% if @auth_flow.errors.any? %>
        <div class="bg-red-100 border-l-4 border-red-500 mb-4 p-4 text-red-700" role="alert">
          <p class="font-bold">Oops!</p>
          <% @auth_flow.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="input-group">
        <%= f.label :phone, "Mobile number (without +91):", class:"label" %>
        <%= f.text_field :phone, class:"input" %>
      </div>

      <%= recaptcha_tags %>
      <br />
      <div class="input-group">
        <%= f.submit "Get OTP", class: "btn btn-default" %>
      </div>

      <hr class="mt-6 border" />

      <div class="flex flex-wrap"><%= link_to "Log in", new_session_path('customer'), class: "block py-2 text-gray-700 underline hover:no-underline" %></div>
    <% end %>
  </div>
</div>
