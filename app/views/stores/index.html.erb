<div class="w-full max-w-xl">
  <div class="bg-white border border-gray-300 rounded-lg px-8 pt-6 pb-8">
    <div class="d-flex align-items-center justify-content-between">
      <h2 class="pt-4 mb-8 text-4xl font-bold heading">Stores</h2>
    </div>
    <div class="table-responsive-xl w-full">
      <table class="table">
        <tbody>
        <% @stores.each do |store| %>
          <tr class="border border-gray-200 p-4">
            <td class="p-4">
              <%= store.name %>
            </td>
            <td class="p-4">
              <%= link_to "Edit", edit_store_path(store) %>
              <% if store != current_user.owned_store %>
                | <%= link_to "Make Default", set_as_preferred_store_path(store) %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <%= link_to 'New Store', new_store_path, class: 'btn btn-default mt-4' %>
  </div>
</div>


